@model IEnumerable<NBDProject2024.Models.Material>
<br />
<div class="card mb-sm-3" style="min-width: 18rem;">
    <h4 class="card-header" id="Material">Materials</h4>
    <div class="card-body">
        @Html.DropDownList("MaterialID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
    </div>

    <div class="card-footer">
        <a asp-controller="Materials" asp-action="Create">Create</a> |
        <a asp-controller="Materials" asp-action="Edit" class="linkClick">Edit</a> |
        <a asp-controller="Materials" asp-action="Details" class="linkClick">Details</a> |
        <a asp-controller="Materials" asp-action="Delete" class="linkClick">Delete</a>
    </div>
</div>

