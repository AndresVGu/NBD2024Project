@model NBDProject2024.Models.Client

<partial name="_ViewHeading" />

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />




<div class="row">

    <form asp-action="Edit" class="card p-2">
        <div class="col-md-6 order-md-0 mb-4">
            <h4 class="mb-3">Contact Information</h4>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="RowVersion" />

            <div class="row">

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="FirstName" class="control-label">First Name*:</label>
                    <input asp-for="FirstName" class="form-control" placeholder="E.g. John" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label asp-for="LastName" class="control-label">Last Name*:</label>
                    <input asp-for="LastName" class="form-control" placeholder="E.g. Doe" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="MiddleName" class="control-label">Middle Name (optional):</label>
                <input asp-for="MiddleName" class="form-control" placeholder="E.g. Jeremy" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CompanyName" class="control-label">Company Name*:</label>
                <input asp-for="CompanyName" class="form-control" placeholder="Acme Inc." />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">Phone Number*:</label>
                <input asp-for="Phone" class="form-control" placeholder="E.g. 1234567891" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>



        </div>
        <hr />
        <div class="col-md-6 order-md-1">
            <h4 class="mb-3">Address Information</h4>



            <div class="form-group">
                <label asp-for="AddressStreet" class="control-label">Street Number*:</label>
                <input asp-for="AddressStreet" class="form-control" placeholder="E.g. 100 Niagara College Boulevard" />
                <span asp-validation-for="AddressStreet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Province*:</label>
                <select class="form-control dropdown-toggle" id="ProvinceID" name="ProvinceID" asp-items="ViewBag.ProvinceID">

                    <option value="0">Select Province  &#8883;</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CityID" class="control-label">City*:</label>
                <select asp-for="CityID" class="form-control" asp-items="ViewBag.CityID">
                    <option value="0">
                        Select a Province First &#8883;

                    </option>
                </select>
                <span asp-validation-for="CityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label">Postal Code*:</label>
                <input asp-for="PostalCode" class="form-control" placeholder="E.g. LC37L3" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AddressCountry" class="control-label">Country*:</label>
                <input asp-for="AddressCountry" class="form-control" placeholder="E.g. Canada" />
                <span asp-validation-for="AddressCountry" class="text-danger"></span>
            </div>
        </div>



        <div class="form-group  order-md-2">
            <input type="submit" class="btn btn-primary btn-lg " />
        </div>
        <div class=" order-md-3">
            <a asp-action="Index">Back to List</a>
        </div>

    </form>
    <br />

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/multiselect.js"></script>
    <script src="~/js/refreshDDL.js"></script>
    <script type="text/javascript">
        $('#ProvinceID').change(function () {
            var selectedProvince = $("#ProvinceID").val();
            var URL = "/Clients/GetCities/?ProvinceID=" + selectedProvince;
            refreshDDL('CityID', URL, true, 'Select a Province with Cities first', false, null, true);
        });
    </script>

}
