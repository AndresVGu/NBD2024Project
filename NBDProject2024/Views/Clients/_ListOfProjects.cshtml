@model IEnumerable<NBDProject2024.Models.Project>
<br />
<div class="panel panel-primary">

    <div class="panel-heading">
        <h4 class="panel-title">List of Projects</h4>

        <a asp-controller="Projects" asp-action="Create" asp-route-id="@Model" class="btn btn-outline-success" fdprocessedid="k03am" data-bs-toggle="tooltip" title="Create a new project">Add Project</a>

    </div>
    <div class="panel-body scrollable-panel">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Summary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDateSummary)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>

                            <a asp-controller="ProjectBid" asp-action="Index" asp-route-ProjectID="@item.ID">
                                @Html.DisplayFor(modelItem => item.Summary)
                            </a>

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDateSummary)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>