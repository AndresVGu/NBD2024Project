@model NBDProject2024.ViewModels.EmployeeVM

<partial name="_ViewHeading" />

<h3>Account for: @Model.FullName</h3>

<div>
    <hr />

    @if (TempData["AlertMessage"] != null)
    {
        <br />
        <div class="alert alert-success">
            <strong>Success !</strong> @TempData["AlertMessage"]
        </div>

    }

    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model =>model.FirstName)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NumberOfPushSubscriptions)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.NumberOfPushSubscriptions)
        </dd>

        
    </dl>

</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit Account Details</a>
</div>