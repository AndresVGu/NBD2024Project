@model IEnumerable<NBDProject2024.ViewModels.EmployeeAdminVM>

<partial name="_ViewHeading"/>

<div class="text-danger">@TempData["message"]</div>

<table class="table table-hover">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PhoneFormatted)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Prescriber)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.UserRoles)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>

            <th class="text-center" style="min-width:120px">
                <a asp-action="Create" class="btn btn-sm btn-outline-success"
                role="button" data-bs-toogle="tooltip" title="Create New @ViewData["ControllerFriendlyName"]">
                    <strong>&#x270D; Create</strong>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=> item.FullName)<br />
                    Email: @Html.DisplayFor(modelItem=> item.Email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PhoneFormatted)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>

                <td>
                    <div class="form-group form-switch">
                        <input class="form-check-input" type="checkbox"
                        disabled="disabled" @(Html.Raw(item.Prescriber ? "checked=\"checked\"" : "")) />
                    </div>
                </td>

                <td>
                    @{
                        foreach(var r in item.UserRoles)
                        {
                            @: @r <br />
                        }
                    }
                </td>

                <td>
                    <div class="form-group form-switch">
                        <input class="form-check-input" type="checkbox"
                               disabled="disabled" @(Html.Raw(item.Active ? "checked=\"checked\"" : "")) />
                    </div>
                </td>

                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary"
                        role="button" data-bs-toggle="tooltip" title="Edit @ViewData["ControllerFriendlyName"]">
                        &#x270; Edit
                    </a>

                    @if(item.NumberOfPushSubscriptions > 0)
                    {
                        @:| @{
                            <a asp-controller="WebPush" asp-action="Send"
                                asp-route-id="@item.ID">Send Notification</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>


}
